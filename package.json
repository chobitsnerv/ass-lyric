{
  "name": "@a-soulfan/ass-lyric",
  "version": "0.0.1",
  "description": "Starter template to build component library for vue.js 2-3",
  "keywords": [
    "starter",
    "boilerplate",
    "vue",
    "vue3",
    "component",
    "ui",
    "frontend"
  ],
  "license": "MIT",
  "author": "chobitsnerv",
  "repository": {
    "type": "git",
    "url": "https://github.com/A-SoulFan/ass-lyric"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "bugs": "https://github.com/A-SoulFan/ass-lyric/issues",
  "scripts": {
    "prepare": "husky install",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "dev": "vite --mode dev",
    "build": "pnpm clean:dist && vite build --mode prod && vue-tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm clean:coverage && vitest run --coverage --mode test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "element-plus": "^2.2.2",
    "sass": "^1.52.1",
    "vue-demi": "^0.12.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.22.0",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^17.0.36",
    "@vitejs/plugin-vue": "^2.3.3",
    "c8": "^7.11.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "happy-dom": "^2.55.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2",
    "unplugin-auto-import": "^0.7.2",
    "unplugin-vue-components": "^0.19.6",
    "vite": "^2.9.9",
    "vitest": "^0.7.13",
    "vue": "^3.2.36",
    "vue-tsc": "^0.29.8"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
